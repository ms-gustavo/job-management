datasource db {
   provider = "mongodb"
   url = env("DATABASE_URL")
}

generator client {
   provider = "prisma-client-js"
}

model User {
   id String @id @default(auto()) @map("_id") @db.ObjectId
   email String @unique
   name String
   password String
   jobs Job[]
}

model Job {
   id String @id @default(auto()) @map("_id") @db.ObjectId
   title String
   company String
   status String
   appliedAt DateTime
   userId String @db.ObjectId
   user User @relation(fields: [userId], references: [id])
}